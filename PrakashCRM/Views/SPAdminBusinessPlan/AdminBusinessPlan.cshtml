﻿
@{
    ViewBag.Title = "AdminBusinessPlan";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}
<style>
    .table-container {
        max-height: 400px;
        overflow-y: auto;
        /*        border: 1px solid #ccc;*/
        width: 100%;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead, tbody {
        display: block;
    }

    thead {
        background-color: #f1f1f1;
    }

    tbody {
        max-height: 600px;
        overflow-y: auto;
    }

    th, td {
        padding: 8px;
        text-align: left;
