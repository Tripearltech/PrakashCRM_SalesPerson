@model PrakashCRM.Data.Models.UserProfileDetails
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}

<style>
    .card {
        height: 490px;
    }
</style>

<div class="page-content">

    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/SPDashboard/Index"><i class="bx bx-tachometer"></i>&nbsp;Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Profile
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    <!--end breadcrumb-->

    <div class="container">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card" style="margin-left:-50px">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center" style="margin-top:85px">
                                @if (Session["SPProfileImage"] == null)
                                {
                                    <img id="profileImage" src="~/SPProfileImages/UserProfileImage.png" class="rounded-circle p-1 bg-primary" width="110px" height="110px" />
                                }
                                else
                                {
                                    <img id="profileImage" src="@Session["SPProfileImage"].ToString()" class="rounded-circle p-1 bg-primary" width="110px" height="110px" />
                                }
                                <div class="mt-3">
                                    <h4>@Model.First_Name @Model.Last_Name</h4>
                                    <p class="text-secondary mb-1">@Model.Company_E_Mail</p>
                                    <br />
                                    @using (Html.BeginForm("UploadProfileImage", "SalesPerson", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <input type="file" id="flProfileImage" name="flProfileImage" class="form-control form-control-sm" />
                                        <br /><br />
                                        <button class="btn btn-primary" onclick="return CheckFileForUpload()"><i class="bx bx-upload"></i>Upload</button>
                                        <button id="btnRemoveProfileImg" class="btn btn-danger"><i class="bx bx-trash"></i>Remove Image</button>
                                        <button id="btnRemoveImgSpinner" class="btn btn-primary" type="button" disabled style="display:none">
                                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                            <span class="visually-hidden">Loading...</span>
                                        </button>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card" style="width:900px">
                        <div class="card-body">
                            @using (Html.BeginForm("Profile", "SalesPerson", FormMethod.Post))
                            {
                                @Html.ValidationSummary(true)
                                <div class="row">
                                    <div>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">First Name<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                    <div class="col-sm-9">
                                                        @Html.TextBoxFor(model => model.First_Name, new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.First_Name, null, new { style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">Last Name<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                    <div class="col-sm-9">
                                                        @Html.TextBoxFor(model => model.Last_Name, new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.Last_Name, null, new { style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">Email</label>
                                                    <div class="col-sm-9">
                                                        <label class="form-label">@Model.Company_E_Mail</label>
                                                        @Html.HiddenFor(model => model.Company_E_Mail, new { Value = @ViewBag.Company_E_Mail })


                                                        @*@Html.TextBoxFor(model => model.Company_E_Mail, new { @class = "form-control", @id = "CompanyEmail" })
                                                        @Html.ValidationMessageFor(model => model.Company_E_Mail, null, new { style = "color:red" })*@
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">Job Title<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                    <div class="col-sm-9">
                                                        @Html.TextBoxFor(model => model.Job_Title, new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.Job_Title, null, new { style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">Contact No</label>
                                                    <div class="col-sm-9">
                                                        <label class="form-label">@Model.Phone_No</label>
                                                        @Html.HiddenFor(model => model.Phone_No, new { Value = Model.Phone_No })

                                                        @*@Html.TextBoxFor(model => model.Mobile_Phone_No, new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.Mobile_Phone_No, null, new { style = "color:red" })*@
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">Birth Date</label>
                                                    <div class="col-sm-9">
                                                        @Html.TextBoxFor(x => x.Birth_Date, new { Value = Model.Birth_Date, @class = "form-control datepicker", autocomplete = "off", @alt = "Date Of Birth" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">Branch</label>
                                                    <div class="col-sm-9">
                                                        <input type="hidden" id="hfBranchCode" value="@ViewBag.Global_Dimension_1_Code" />
                                                        @*@Html.DropDownListFor(model => model.Global_Dimension_1_Code, Enumerable.Empty<SelectListItem>(), new { @id = "ddlBranch", @class = "form-select" })*@
                                                        <label class="form-label">@ViewBag.Global_Dimension_1_Code</label>
                                                        @Html.HiddenFor(model => model.Global_Dimension_1_Code, new { Value = @ViewBag.Global_Dimension_1_Code })

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">Role</label>
                                                    <div class="col-sm-9">
                                                        <input type="hidden" id="hfRoleNo" value="@ViewBag.Role_No" />
                                                        @*@Html.DropDownListFor(model => model.Role_No, Enumerable.Empty<SelectListItem>(), new { @id = "ddlRole", @class = "form-select" })*@
                                                        @*@Html.LabelFor(model => model.Role_No,(string)@ViewBag.Role_No, new { @id = "lblRole", @class = "form-label", style = "font-weight:bold" })*@
                                                        @Html.HiddenFor(model => model.Role_No, new { Value = @ViewBag.Role_No })
                                                        <label class="form-label">@ViewBag.Role</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">Status</label>
                                                    <div class="col-sm-9">
                                                        <label class="form-label">@Model.Status</label>
                                                        @Html.HiddenFor(model => model.Status, new { Value = @ViewBag.Status })

                                                        @*<input type="hidden" id="hfStatus" value="@ViewBag.Status" />
                                                        @Html.DropDownListFor(model => model.Status, Enumerable.Empty<SelectListItem>(), new { @id = "ddlStatus", @class = "form-select" })*@
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">Date of Joining</label>
                                                    <div class="col-sm-9">
                                                        <label class="form-label">@Model.Employment_Date</label>
                                                        @Html.HiddenFor(model => model.Employment_Date, new { Value = Model.Employment_Date })

                                                        @*@Html.TextBoxFor(x => x.Employment_Date, new { Value = Model.Employment_Date, @class = "form-control datepicker", autocomplete = "off", @alt = "Date Of Employment" })*@
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">View Transaction</label>
                                                    <div class="col-sm-9">
                                                        <input type="hidden" id="hfViewTransactionNo" value="@ViewBag.View_Transaction_No" />
                                                        @*@Html.DropDownListFor(model => model.View_Transaction_No, Enumerable.Empty<SelectListItem>(), new { @id = "ddlViewTransaction", @class = "form-select" })*@
                                                        @*@Html.LabelFor(model => model.View_Transaction_No, (string)@ViewBag.View_Transaction_No, new { @id = "lblViewTransaction", @class = "form-label", style = "font-weight:bold" })*@
                                                        @Html.HiddenFor(model => model.View_Transaction_No, new { Value = @ViewBag.View_Transaction_No })
                                                        <label class="form-label">@ViewBag.View_Transaction</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">Address<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                    <div class="col-sm-9">
                                                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.Address, null, new { style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row g-3">
                                            <div class="col-md-12">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="toolbar">
                                    <div class=" text-end g-3">
                                        @Html.HiddenFor(model => model.Address_2)
                                        <input type="hidden" id="hdnProfileAction" value="@Session["ProfileAction"]" />
                                        <button id="btnSave" class="btn btn-success" type="submit"><i class="bx bxs-save"></i> Save</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/spprofilejs")