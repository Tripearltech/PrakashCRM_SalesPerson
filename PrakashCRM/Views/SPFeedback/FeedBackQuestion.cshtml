
@{
    ViewBag.Title = "FeedBackQuestion";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}

<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/SPDashboard/Index"><i class="bx bx-tachometer"></i>&nbsp;Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/SPFeedback/Feedback Question"> </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Feed Back Question
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="card-body">
            <div class="">
                <div class="row">
                    <div>
                        <div class="row g-3">
                            <div class="col-md-12">
                                <table class="table mb-0 table-striped">
                                    <thead>
                                        <tr>

                                            <th scope="col">No</th>
                                            <th scope="col">Contact No.</th>
                                            <th scope="col">Contact Person</th>
                                            <th scope="col">Products</th>
                                            <th scope="col">Overall Rating</th>
                                            <th scope="col">Comments</th>
                                            <th scope="col">Suggestion</th>
                                            <th scope="col">Sale Person</th>

                                        </tr>
                                    </thead>
                                    <tbody id="tblFeedBackQuestionDetails">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="FeedbackLinesModal" tabindex="-1" aria-labelledby="FeedbackLinesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Feedback Question</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="max-height: 450px; overflow-y: auto;">
                <table class="table mb-0 table-striped">
                    <thead class="sticky-top bg-white" style="top: -20px;">
                        <tr>
                            <th scope="col">Feedback Question No.</th>
                            <th scope="col">Feedback Question</th>
                            <th scope="col">Rating</th>
                            <th scope="col">Comments</th>
                        </tr>
                    </thead>
                    <tbody id="tblFeedbackLine"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/appjs/FeedBackQuestion.js"></script>
