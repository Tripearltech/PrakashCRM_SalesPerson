
@{
    ViewBag.Title = "SalesQuoteStatus";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}

<link href="~/Content/appcss/paginationFilterCss.css" rel="stylesheet" />
<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/SPDashboard/Index"><i class="bx bx-tachometer"></i>&nbsp;Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Sales Quote Status
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="card-body">

            <div class="row">
                <div>
                    <div class="row g-3">

                        <div class="col-md-2">
                            <input id="getServiceApiUrl" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceApiUrl"].ToString()" style="display:none" />
                        </div>

                        <div class="col-md-10">
                            <div class="row row-cols-auto g-3" style="float:right">
                                <div class="col">
                                    <label class="col-form-label">Filter:</label>
                                </div>
                                <div class="col">
                                    <select id="ddlField" class="form-select">
                                        <option value="-1">---Select---</option>
                                        <option value="No">Quote No</option>
                                        <option value="Sell_to_Customer_Name">Customer Name</option>
                                        <option value="Sell_to_Contact">Contact Name</option>
                                        <option value="Posting_Date">Document Date</option>
                                        <option value="Due_Date">Due Date</option>
                                        <option value="Amount">Amount</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <input id="txtFromDate" type="date" class="form-control" style="display:none">
                                    <select id="ddlOperator" class="form-select">
                                        <option value="-1">---Select---</option>
                                        <option value="Equal">Equal</option>
                                        <option value="Not Equal">Not Equal</option>
                                        <option value="Starts With">Starts With</option>
                                        <option value="Ends With">Ends With</option>
                                        <option value="Contains" selected>Contains</option>
                                        <option value="Less Than">Less Than</option>
                                        <option value="Greater Than">Greater Than</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <input id="txtToDate" type="date" class="form-control" style="display:none">
                                    <div id="dvtxtSearch" class="position-relative">
                                        <input id="txtSearch" type="text" class="form-control ps-5" placeholder="Search Product..."> <span class="position-absolute top-50 product-show translate-middle-y"><i class="bx bx-search"></i></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <button id="btnSearch" class="btn btn-primary" type="button"><i class="bx bx-search"></i>Search</button>
                                    &nbsp;
                                    <button id="btnClearFilter" class="btn btn-primary" type="button">
                                        <i class="bx bx-rotate-right me-0"></i>&nbsp;Refresh
                                    </button>
                                </div>
                                <div style="display:none" class="col">
                                    <button id="btnExport" class="btn btn-primary" type="button"><i class="bx bxs-file"></i>Export</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">

            <div class="row g-3">

                <div class="col-md-12" align="right">
                    <button id="btnApproveSpinner" class="btn btn-primary" type="button" disabled style="display:none">
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span class="visually-hidden">Loading...</span>
                    </button>
                    &nbsp;
                    @*<button type="button" class="btn btn-outline-success px-5" onclick="ApproveRejectSQ('Approve','')">
                        <i class='bx bx-check mr-1'></i>Approve
                    </button>*@
                    &nbsp;
                    @*<button id="btnReject" type="button" class="btn btn-outline-danger px-5">
                        <i class='bx bx-x mr-1'></i>Reject
                    </button>*@
                </div>

            </div>

            <div class="row g-3">

                <div class="col-md-12">
                    <div class="table-responsive">
                        <table id="dataList" class="display responsive nowrap" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th><input type="checkbox" id="chkAll" class="form-check-input" /></th>
                                    <th></th>
                                    <th>Quote No</th>
                                    <th>Quote Date</th>
                                    <th>Customer Name</th>
                                    <th>Payment Terms</th>
                                    <th hidden>ApprovalFor</th>
                                    <th></th>
                                    <th>Salesperson Code</th>
                                    <th hidden>Salesperson Email</th>
                                </tr>
                            </thead>
                            <tbody id="tableBody">
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th>Quote No</th>
                                    <th>Quote Date</th>
                                    <th>Customer Name</th>
                                    <th>Payment Terms</th>
                                    <th hidden>ApprovalFor</th>
                                    <th></th>
                                    <th>Salesperson Code</th>
                                    <th hidden>Salesperson Email</th>
                                </tr>
                            </tfoot>
                        </table>
                        <input id="hdnLoggedInUserNo" value="@Session["loggedInUserNo"]" style="display:none" />
                        <input id="hdnLoggedInUserSPCode" value="@Session["loggedInUserSPCode"]" style="display:none" />
                        <input id="hdnLoggedInUserEmail" value="@Session["loggedInUserEmail"]" style="display:none" />
                        <input id="hdnLoggedInUserRole" value="@Session["loggedInUserRole"]" style="display:none" />
                        <input id="hdnSPSQCount" style="display:none" />
                        <div id="orderInfo"></div>
                    </div>
                </div>

            </div>
            <div>
                <div class="row">
                    <div>
                        <div class="row g-3">

                            <div class="col-md-12">
                                <div class="row row-cols-auto g-3">
                                    <div class="col">
                                        <label class="col-form-label" style="font-weight:bold">Per Page Records: </label>
                                    </div>
                                    <div class="col">
                                        <select id="ddlRecPerPage" class="form-select">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                        </select>
                                    </div>
                                    <div class="col">
                                        <ul class="pagination pagination-lg pager" id="myPager"></ul>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalSQProds" tabindex="-1" aria-hidden="true" style="display:none">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sales Quote Products</h5>
                <button id="btnCloseModalSQProds" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="row g-3">
                    <div class="col-md-12">
                        <table>
                            <tr>
                                <td><label style="font-weight:bold">Sales Quote No: </label></td>
                                <td>&nbsp;</td>
                                <td><label id="lblSQProdSQNo"></label></td>
                            </tr>
                        </table>
                    </div>
                </div>
                <br />
                <div id="dvAprDetailsFinanceUser" style="display:none">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <div class="row mb-3">
                                <div class="col-sm-12">
                                    <table class="table mb-0 table-striped">
                                        <tr>
                                            <td style="font-weight:bold">Customer Name</td>
                                            <td>Abc Pvt Ltd</td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">Justification For</td>
                                            <td>Credit Limit/Margin/Both</td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">Justification Reason</td>
                                            <td>Reason for justification</td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">Trader/Mfg</td>
                                            <td>Trader/Mfg details</td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">Total Expo</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">Overdue</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">Avg Delay Days</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">Approve/Reject</td>
                                            <td>Approved/Rejected</td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">Location</td>
                                            <td></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="dvAprDetailsRPerson" style="display:none">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <div class="row mb-3">
                                <div class="col-sm-12">
                                    <table class="table mb-0 table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col">Product No</th>
                                                <th scope="col">Product Name</th>
                                                <th scope="col">Quantity</th>
                                                <th scope="col">Packing Style</th>
                                                <th scope="col">UOM</th>
                                                <th scope="col">MRP</th>
                                                <th scope="col">Unit Price(Sales Price)</th>
                                                <th scope="col">Payment Terms</th>
                                                <th scope="col">Delivery Date</th>
                                                <th scope="col">Total Cost</th>
                                                <th scope="col">Margin</th>
                                                <th scope="col">Drop Shipment</th>
                                                @*<th scope="col">Vendor</th>*@
                                            </tr>
                                        </thead>
                                        <tbody id="tblSQProduct">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalRejectRemarks" tabindex="-1" aria-hidden="true" style="display:none">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Remarks</h5>
                <button id="btnCloseModalRejectRemarks" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-md-12">
                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Remarks</label>
                            <div class="col-sm-9">
                                <textarea id="txtRejectRemarks" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="padding-bottom:0px">
                <div class="row g-3">
                    <div class="col-md-12">
                        <div class="row mb-3">
                            <div class="col-sm-12" align="right">
                                <label id="lblRemarksMsg" class="col-form-label" style="color:red"></label>
                                &nbsp;
                                <button id="btnRejectSpinner" class="btn btn-primary" type="button" disabled style="display:none">
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="visually-hidden">Loading...</span>
                                </button>
                                &nbsp;
                                <button id="btnConfirmReject" type="button" class="btn btn-primary">Reject</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalApproveRejectMsg" tabindex="-1" aria-hidden="true" style="display:none">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sales Quote Approval</h5>
                <button id="btnCloseApproveRejectMsg" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <center>
                    <img id="resIcon" src="~/Layout/assets/images/appImages/Icon-1.png" />
                    <br />
                    <label id="lblApproveRejectMsg" class="form-label"></label>
                </center>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/appjs/SQListForApproveReject.js"></script>
<script>
    function RedirectToSQCard(SQNo, ScheduleStatus, SQStatus, SQFor, LoggedInUserRole) {

        window.location.replace('@Url.Action("SalesQuote", "SPSalesQuotes")?SQNo=' + SQNo + '&ScheduleStatus=' + ScheduleStatus + '&SQStatus=' + SQStatus + '&SQFor=' + SQFor + '&LoggedInUserRole=' + LoggedInUserRole);

    }
</script>