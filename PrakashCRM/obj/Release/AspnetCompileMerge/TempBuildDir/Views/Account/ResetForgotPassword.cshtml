
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--favicon-->

    <link rel="icon" type="image/x-icon" href="~/Layout/assets/images/login-images/favicon-1.ico">
    <title>Prakash - Reset Password</title>
    @Styles.Render("~/bundles/commoncss")

</head>

<body>

    <!-- wrapper -->
    <div class="wrapper">
        <div class="authentication-header"></div>
        <div class="authentication-reset-password d-flex align-items-center justify-content-center">
            <div class="row">
                <div class="col-12 col-lg-12 mx-auto">
                    <div class="card">
                        <div class="row g-0">
                            <div class="col-lg-12 border-end">
                                <div class="card-body">
                                    <div class="text-center">
                                        <img src="~/Layout/assets/images/login-images/logo-2.jfif" width="250px" height="150px" />
                                        <h4 class="font-weight-bold">Generate New Password</h4>
                                        <p class="text-muted">We received your reset password request. Please enter your new password!</p>
                                    </div>
                                    <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-2">
                                        <div class="col d-flex">
                                            <div class="card radius-10 p-0 w-100 bg-transparent shadow-none">
                                                <div class="card radius-10">
                                                    <div class="card-body" style="position: relative;">
                                                        
                                                        <div class="mb-3">
                                                            <label class="form-label">New Password</label>
                                                            <div class="input-group" id="show_hide_newpassword">
                                                                <input type="password" id="newpass" class="form-control" placeholder="Enter new password" /> <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                                                            </div>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Confirm Password</label>
                                                            <div class="input-group" id="show_hide_confpassword">
                                                                <input type="password" id="confirmnewpass" class="form-control" placeholder="Confirm password" /> <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                                                            </div>
                                                        </div>
                                                            <div class="d-grid gap-2">
                                                                <input id="getServiceApiUrl" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceApiUrl"].ToString()" style="display:none" />
                                                                <button type="button" id="btnReset" class="btn btn-primary">Reset Password</button> <a href="/Account/Login" class="btn btn-light"><i class='bx bx-arrow-back mr-1'></i>Back to Login</a>
                                                            </div>
                                                        
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col d-flex">
                                            <div class="card radius-10">
                                                <div class="card-body" style="position: relative;">
                                                    <h6 data-start="82" data-end="109">🔒 Password Policy Note</h6>
                                                    <p data-start="111" data-end="162">Your password must meet the following requirements:</p>
                                                    <ul data-start="164" data-end="387">
                                                        <li data-start="164" data-end="207">
                                                            <p data-start="166" data-end="207">✅ At least <strong data-start="177" data-end="199">1 uppercase letter</strong> (A–Z)</p>
                                                        </li>
                                                        <li data-start="208" data-end="251">
                                                            <p data-start="210" data-end="251">✅ At least <strong data-start="221" data-end="243">1 lowercase letter</strong> (a–z)</p>
                                                        </li>
                                                        <li data-start="252" data-end="284">
                                                            <p data-start="254" data-end="284">✅ At least <strong data-start="265" data-end="276">1 digit</strong> (0–9)</p>
                                                        </li>
                                                        <li data-start="285" data-end="348">
                                                            <p data-start="287" data-end="348">✅ At least <strong data-start="298" data-end="321">1 special character</strong> from: !, @@, $, _</p>
                                                        </li>
                                                        <li data-start="349" data-end="387">
                                                            <p data-start="351" data-end="387">✅ Minimum length of <strong data-start="371" data-end="387">8 characters</strong></p>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end wrapper -->

    <div class='loader' id='divImage' style="display:none">
        <!-- MODAL CONTENT -->
        <div class='loader-content'>
            <img alt="Loading... Please wait!" src="~/Layout/assets/images/login-images/load-image-2.gif" width="100" height="100" />
        </div>
    </div>
    
    <div class="modal" id="modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Password Updated Successfully</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Password updated successfully, we have sent your new password on your mail id, Kindly check
                </div>
                <div class="modal-footer">
                    <button id="btnClose" type="button" class="btn btn-primary">Close</button>
                </div>
            </div>
        </div>
    </div>

</body>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/commonjs")
<script src="~/Scripts/appjs/ResetForgotPassword.js"></script>

<script>

    $(document).ready(function () {

        $('#btnClose,.btn-close').click(function () {
            $("#modal").css("display", "none");
            $('#btnReset').prop('disabled', false);
            window.location.replace('@Url.Action("Login", "Account")');
        });

    });

</script>

</html>
