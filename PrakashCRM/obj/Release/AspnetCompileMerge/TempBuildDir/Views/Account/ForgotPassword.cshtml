
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--favicon-->

    <link rel="icon" type="image/x-icon" href="~/Layout/assets/images/login-images/favicon-1.ico">
    <title>Prakash - Forgot Password</title>
    @Styles.Render("~/bundles/commoncss")

</head>

<body>
    <!-- wrapper -->
    <div class="wrapper">
        <div class="authentication-header"></div>
        <div class="authentication-forgot d-flex align-items-center justify-content-center">
            <div class="card forgot-box rounded-4">
                <div class="card-body">
                    <div class="p-4 rounded">
                        <div class="text-center">
                            <img src="~/Layout/assets/images/login-images/logo-2.jfif" width="250px" height="150px" />
                        </div>
                        <h4 class="mt-5 font-weight-bold">Forgot Password?</h4>
                        <p class="text-muted">Enter your registered email ID to reset the password</p>
                        <div class="my-4">
                            <label class="form-label">Email id</label>
                            <input type="text" id="forgotEmail" class="form-control form-control-lg" placeholder="example@user.com" />
                        </div>
                        <div class="d-grid gap-2">
                            <input id="getSPPortalUrl" value="@System.Configuration.ConfigurationManager.AppSettings["SPPortalUrl"].ToString()" style="display:none" />
                            <input id="getServiceApiUrl" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceApiUrl"].ToString()" style="display:none" />
                            <button type="button" id="btnForgotPass" class="btn btn-primary btn-lg">Send</button> <a href="/Account/Login" class="btn btn-white btn-lg"><i class='bx bx-arrow-back me-1'></i>Back to Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end wrapper -->

    <div class='loader' id='divImage' style="display:none">
        <!-- MODAL CONTENT -->
        <div class='loader-content'>
            <img alt="Loading... Please wait!" src="~/Layout/assets/images/login-images/load-image-2.gif" width="100" height="100" />
        </div>
    </div>
    
    <div class="modal" id="modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Reset Password Link</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <center>
                        <img src="~/Layout/assets/images/appImages/Icon-1.png" />
                        <br />
                        We have sent reset password link on your mail id, Kindly check
                    </center>
                    
                </div>
                <div class="modal-footer">
                    <button id="btnClose" type="button" class="btn btn-primary">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/commonjs")
<script src="~/Scripts/appjs/ForgotPassword.js"></script>

<script>

    $(document).ready(function () {

        $('#btnClose,.btn-close').click(function () {
            $("#modal").css("display", "none");
            window.location.replace('@Url.Action("Login", "Account")');
        });

    });

</script>

</html>