@model PrakashCRM.Data.Models.SPRoles
@{
    ViewBag.Title = "Role";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}

<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/SPDashboard/Index"><i class="bx bx-tachometer"></i>&nbsp;Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/SPRoles/RoleList"> Role List </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Role
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />

    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("Role", "SPRoles", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                <div class="row">
                    <div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="row mb-3">
                                    <label class="col-sm-3 col-form-label">Role<span class="required" style="color:red;margin-left:2px">*</span></label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.Role_Name, new { @class = "form-control", @id = "txtRoleName" })
                                        @Html.ValidationMessageFor(model => model.Role_Name, null, new { style = "color:red" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="row mb-3">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9">
                                        @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input" }) Active
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="toolbar">
                    <div class=" text-end g-3">
                        <input type="hidden" id="hdnRoleAction" value="@Session["RoleAction"]" />
                        <input id="getServiceApiUrl" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceApiUrl"].ToString()" style="display:none" />
                        <button id="btnSave" class="btn btn-success" type="submit"><i class="bx bxs-save"></i> Save</button>
                        &nbsp;
                        <a href="/SPRoles/RoleList" class="btn btn-danger"><i class="lni lni-close"></i> Cancel</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/appjs/SPRole.js"></script>
<script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'></script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>