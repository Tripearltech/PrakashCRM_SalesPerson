
@{
    ViewBag.Title = "DailyVisitExpenseReport";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}

<link href="~/Content/appcss/paginationFilterCss.css" rel="stylesheet" />
<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/SPDashboard/Index"><i class="bx bx-tachometer"></i>&nbsp;Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Daily Visit Expense</li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="card-body">

            <div class="row">
                <div>
                    <div class="row g-3">
                        @*<div class="col-md-2">

                            </div>*@

                        <div>
                            @*class="col-md-10"*@
                            <div class="row row-cols-auto g-3" style="float:right;">
                                <div class="col">
                                    <input id="getServiceApiUrl" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceApiUrl"].ToString()" style="display:none" />
                                    <label class="col-form-label">Filter :</label>
                                </div>
                                <div class="col">
                                    <label class="col-form-label">From Date :</label>
                                </div>
                                <div class="col">
                                    <input id="txtFromDate" type="date" class="form-control">
                                </div>
                                <div class="col">
                                    <label class="col-form-label">To Date :</label>
                                </div>
                                <div class="col">
                                    <input id="txtToDate" type="date" class="form-control">
                                </div>
                                <div class="col">
                                    <input type="hidden" id="hfSalespersonCode" />
                                    <select id="ddlSalesPerson" class="form-select"></select>
                                </div>
                                <div class="col">
                                    <button id="btnSearch" class="btn btn-primary" type="button"><i class="bx bx-search"></i>Search</button>
                                </div>
                                <div class="col">
                                    <button id="btnClearFilter" class="btn btn-primary" type="button">
                                        <i class="bx bx-rotate-right me-0"></i>&nbsp;Refresh
                                    </button>
                                </div>
                                <div class="col">
                                    <button id="btnExport" class="btn btn-primary" type="button"><i class="bx bxs-file"></i>Export</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="dataList" class="display responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Sales Person</th>
                            <th>Opening Time (HH:MM)</th>
                            <th>Closing Time (HH:MM)</th>
                            <th>Total Time (HH:MM)</th>
                            <th>Visit No. (Personal)</th>
                            <th>Opening Kilometer</th>
                            <th>Closing Kilometer</th>
                            <th>Total Kilometer</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Date</th>
                            <th>Sales Person</th>
                            <th>Opening Time (HH:MM)</th>
                            <th>Closing Time (HH:MM)</th>
                            <th>Total Time (HH:MM)</th>
                            <th>Visit No. (Personal)</th>
                            <th>Opening Kilometer</th>
                            <th>Closing Kilometer</th>
                            <th>Total Kilometer</th>
                        </tr>
                    </tfoot>
                </table>
                <input id="hdnWeekPlanNo" style="display:none" />
                <input id="hfDVExpenseCount" style="display:none" />
                <div id="orderInfo"></div>
            </div>
            <div>
                <div class="row">
                    <div>
                        <div class="row g-3">

                            <div class="col-md-12">
                                <div class="row row-cols-auto g-3">
                                    <div class="col">
                                        <label class="col-form-label" style="font-weight:bold">Per Page Records: </label>
                                    </div>
                                    <div class="col">
                                        <select id="ddlRecPerPage" class="form-select">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                        </select>
                                    </div>
                                    <div class="col">
                                        <ul class="pagination pagination-lg pager" id="myPager"></ul>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/appjs/DailyVisitExpenseReport.js"></script>