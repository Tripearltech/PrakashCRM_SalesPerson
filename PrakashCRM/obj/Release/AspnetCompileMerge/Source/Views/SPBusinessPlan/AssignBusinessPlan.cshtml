
@{
    ViewBag.Title = "AssignBusinessPlan";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}

<link href="~/Content/appcss/paginationFilterCss.css" rel="stylesheet" />
<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/SPDashboard/Index"><i class="bx bx-tachometer"></i>&nbsp;Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Assign Business Plan
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    
    <div class="card">
        <div class="card-body">

            <div class="row">
                <div>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Financial Year:</label>
                                <div class="col-sm-9">
                                    <select id="ddlFinancialYear" class="form-select"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">From Salesperson<span class="required" style="color:red;margin-left:2px">*</span></label>
                                <div class="col-sm-9">
                                    <select id="ddlFromSP" class="form-select"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Assign To<span class="required" style="color:red;margin-left:2px">*</span></label>
                                <div class="col-sm-9">
                                    <select id="ddlToSP" class="form-select"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-12" align="right">
                            <button id="btnAssignSpinner" class="btn btn-primary" type="button" disabled style="display:none">
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <span class="visually-hidden">Loading...</span>
                            </button>
                            &nbsp;
                            <button id="btnAssign" class="btn btn-primary" type="button">Assign</button>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table id="dataList" class="display responsive nowrap" style="width:100%">
                            <thead>
                                <tr>
                                    <th width="10px"></th>
                                    <th width="10px"><input type="checkbox" id="chkAll" class="form-check-input" /></th>
                                    <th hidden></th>
                                    <th>Customer</th>
                                </tr>
                            </thead>
                            <tbody id="tableBody">
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th width="10px"></th>
                                    <th width="10px"></th>
                                    <th hidden></th>
                                    <th>Customer</th>
                                </tr>
                            </tfoot>
                        </table>
                        <input id="getServiceApiUrl" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceApiUrl"].ToString()" style="display:none" />
                        <input id="hdnLoggedInUserSPCode" value="@Session["loggedInUserSPCode"]" style="display:none" />
                        <input id="hdnContactCount" style="display:none" />
                        <div id="orderInfo"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalAssignBusinessPlanMsg" tabindex="-1" aria-hidden="true" style="display:none">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Assign Business Plan</h5>
                <button id="btnCloseAssignBusinessPlanMsg" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <center>
                    <img id="resIcon" src="~/Layout/assets/images/appImages/Icon-1.png" />
                    <br />
                    <label class="form-label">Business Plan Assigned Successfully</label>
                </center>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalErrMsg" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="color:red">Error</h5>
                <button id="btnCloseModalErrMsg" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="color:red" align="center">
                <img src="~/Layout/assets/images/appImages/CancelIcon.png" />
                <br /><br />
                <h6 id="modalErrDetails" style="color:red"></h6>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/appjs/AssignBusinessPlan.js"></script>