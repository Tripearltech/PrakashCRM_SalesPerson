
@{
    ViewBag.Title = "BusinessPlanContactList";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}

<style>
    .AddCls:hover {
        cursor: pointer;
    }
</style>
<link href="~/Content/appcss/paginationFilterCss.css" rel="stylesheet" />
<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/SPDashboard/Index"><i class="bx bx-tachometer"></i>&nbsp;Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Business Plan Contacts
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="card-body">

            <div class="row">
                <div>
                    <div class="row g-3">
                        <div class="col-md-5">
                            <div class="row row-cols-auto g-3">
                                <div class="col">
                                    <input id="getServiceApiUrl" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceApiUrl"].ToString()" style="display:none" />
                                    <label class="col-form-label">Financial Year:</label>
                                </div>
                                <div class="col">
                                    <select id="ddlFinancialYear" class="form-select"></select>
                                </div>
                                <div class="col">
                                    <select id="ddlStatus" class="form-select">
                                        <option value="-1">All</option>
                                        <option value="Not Filled" selected>Not Filled</option>
                                        <option value="Filled">Filled</option>
                                        <option value="Submitted">Sent For Approval</option>
                                        <option value="Approved">Approved</option>
                                        <option value="Rejected">Rejected</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="row row-cols-auto g-3" style="float:right">
                                <div class="col">
                                    <label class="col-form-label">Filter:</label>
                                </div>
                                <div class="col">
                                    <select id="ddlField" class="form-select">
                                        <option value="-1">---Select---</option>
                                        <option value="Customer_Name">Customer Name</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <input id="txtFromDate" type="date" class="form-control" style="display:none">
                                    <select id="ddlOperator" class="form-select">
                                        <option value="-1">---Select---</option>
                                        <option value="Equal">Equal</option>
                                        <option value="Not Equal">Not Equal</option>
                                        <option value="Starts With">Starts With</option>
                                        <option value="Ends With">Ends With</option>
                                        <option value="Contains" selected>Contains</option>
                                        @*<option value="Less Than">Less Than</option>
                                        <option value="Greater Than">Greater Than</option>*@
                                    </select>
                                </div>
                                <div class="col">
                                    <input id="txtToDate" type="date" class="form-control" style="display:none">
                                    <div id="dvtxtSearch" class="position-relative">
                                        <input id="txtSearch" type="text" class="form-control ps-5" placeholder="Search Product..."> <span class="position-absolute top-50 product-show translate-middle-y"><i class="bx bx-search"></i></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <button id="btnSearch" class="btn btn-primary" type="button"><i class="bx bx-search"></i></button>
                                    &nbsp;
                                    <button id="btnClearFilter" class="btn btn-primary" type="button">
                                        <i class="bx bx-rotate-right me-0"></i>&nbsp;
                                    </button>
                                </div>
                                <div style="display:none" class="col">
                                    <button id="btnExport" class="btn btn-primary" type="button"><i class="bx bxs-file"></i>Export</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="card">
        <div class="card-body">

            <div class="row">
                <div>
                    <div class="row g-3">

                        <div class="col-md-12" align="right">
                            <table>
                                <tr>
                                    <td><label class="form-label" style="font-weight:bold">Total Demand Qty</label></td>
                                    <td>&nbsp;</td>
                                    <td><label id="lblTotalDemandQty" class="form-label"></label></td>
                                    <td>&nbsp;</td>
                                    <td><label class="form-label" style="font-weight:bold">Total Target Qty</label></td>
                                    <td>&nbsp;</td>
                                    <td><label id="lblTotalTargetQty" class="form-label"></label></td>
                                    <td>&nbsp;</td>
                                    <td><button id="btnSendApproval" class="btn btn-primary" type="button">Send For Approval</button></td>
                                </tr>
                            </table>
                        </div>

                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table id="dataList" class="display responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th colspan="3" align="center">
                                <label id="lblPrevFinancialYear" class="form-label" style="font-weight:bold"></label>
                            </th>
                            <th colspan="2" align="center">
                                <label id="lblFinancialYear" class="form-label" style="font-weight:bold"></label>
                            </th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                        <tr>
                            <th></th>
                            <th>Customer</th>
                            <th>Total<br />Demand Qty</th>
                            <th>Total<br />Target Qty</th>
                            <th>Total<br />Achieved Qty</th>
                            <th>Total<br />Demand Qty</th>
                            <th>Total<br />Target Qty</th>
                            <th>Status</th>
                            <th>Action</th>
                            <th>Remarks</th>
                        </tr>
                        @*<tr>
                        <th></th>
                        <th>Customer</th>
                        <th>Total Target</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>*@
                    </thead>
                    <tbody id="tableBody">
                    </tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th>Customer</th>
                            <th>Total<br />Demand Qty</th>
                            <th>Total<br />Target Qty</th>
                            <th>Total<br />Achieved Qty</th>
                            <th>Total<br />Demand Qty</th>
                            <th>Total<br />Target Qty</th>
                            <th>Status</th>
                            <th>Action</th>
                            <th>Remarks</th>
                        </tr>
                    </tfoot>
                </table>
                <input id="hdnLoggedInUserSPCode" value="@Session["loggedInUserSPCode"]" style="display:none" />
                <input id="hdnContactCount" style="display:none" />
                <div id="orderInfo"></div>
            </div>
            <div>
                <div class="row">
                    <div>
                        <div class="row g-3">

                            <div class="col-md-12">
                                <div class="row row-cols-auto g-3">
                                    <div class="col">
                                        <label class="col-form-label" style="font-weight:bold">Per Page Records: </label>
                                    </div>
                                    <div class="col">
                                        <select id="ddlRecPerPage" class="form-select">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                        </select>
                                    </div>
                                    <div class="col">
                                        <ul class="pagination pagination-lg pager" id="myPager"></ul>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class='loader' id='divImage' style="display:none">
    <!-- MODAL CONTENT -->
    <div class='loader-content'>
        <img alt="Loading... Please wait!" src="~/Layout/assets/images/login-images/load-image-2.gif" width="100" height="100" />
    </div>
</div>
<div class="modal" id="modalApprovalMsg" tabindex="-1" aria-hidden="true" style="display:none">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Business Plan Send For Approval</h5>
                <button id="btnCloseApprovalMsg" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <center>
                    <img id="resIcon" src="~/Layout/assets/images/appImages/Icon-1.png" />
                    <br />
                    <label class="form-label">Business Plan Successfully<br />Sent For Approval</label>
                </center>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalErrMsg" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="color:red">Error</h5>
                <button id="btnCloseModalErrMsg" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="color:red" align="center">
                <img src="~/Layout/assets/images/appImages/CancelIcon.png" />
                <br /><br />
                <h6 id="modalErrDetails" style="color:red"></h6>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/appjs/BusinessPlanContactList.js"></script>
<script>
    function CreateBusinessPlan(CustomerNo, CustomerName, PlanYear) {

        window.location.replace('@Url.Action("BusinessPlan", "SPBusinessPlan")?CustomerNo=' + CustomerNo + '&CustomerName=' + CustomerName + '&PlanYear=' + PlanYear);

    }
</script>