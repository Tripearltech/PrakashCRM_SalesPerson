@model IEnumerable<PrakashCRM.Data.Models.SPWarehouse>
@{
    ViewBag.Title = "WarehouseList";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}

<style>
    .Incoming, .Incoming a {
        color: orange !important;
        font-weight: 500;
    }

    .MapVendor, .MapVendor a {
        color: red !important;
        font-weight: 500;
    }
</style>
<link href="~/Content/appcss/paginationFilterCss.css" rel="stylesheet" />
<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/SPDashboard/Index"><i class="bx bx-tachometer"></i>&nbsp;Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Ongoing Task List</li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div>
                    <div class="row g-3">
                        <div class="col-md-2">
                            <input id="getServiceApiUrl" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceApiUrl"].ToString()" style="display:none" />
                            <input id="getLoggedInUserNo" value="@Session["loggedInUserNo"].ToString()" style="display:none" />
                            <button id="btnAcceptSelected" class="btn btn-primary  mb-3 mb-lg-0" type="button" onclick="AccceptTask();"><i class='bx bx-message-square-check'></i>&nbsp;Accept</button>
                        </div>

                        <div class="col-md-10">
                            <div class="row row-cols-auto g-3" style="float:right">
                                <div class="col">
                                    <label class="col-form-label">Filter:</label>
                                </div>
                                <div class="col">
                                    <select id="ddlField" class="form-select">
                                        <option value="-1">---Select---</option>
                                        <option value="Order_No_Filter_FilterOnly">Order No</option>
                                        <option value="Shipment_Date_Filter_FilterOnly">Shipment Date</option>
                                        <option value="ShiptoName_Filter_FilterOnly">Customer/Vendor</option>
                                        <option value="PCPLAcceptedName_Filter_FilterOnly">Accepted By</option>
                                        <option value="Item_No_Filter_FilterOnly">Item No</option>
                                        <option value="PCPLFromPostCodeFilter_FilterOnly">From PinCode</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <input id="txtFromDate" type="date" class="form-control" style="display:none">
                                    <select id="ddlOperator" class="form-select">
                                        <option value="-1">---Select---</option>
                                        <option value="Equal">Equal</option>
                                        <option value="Not Equal">Not Equal</option>
                                        <option value="Starts With">Starts With</option>
                                        <option value="Ends With">Ends With</option>
                                        <option value="Contains" selected>Contains</option>
                                        @*<option value="Less Than">Less Than</option>
                                        <option value="Greater Than">Greater Than</option>*@
                                    </select>
                                </div>
                                <div class="col">
                                    <input id="txtToDate" type="date" class="form-control" style="display:none">
                                    <div id="dvtxtSearch" class="position-relative">
                                        <input id="txtSearch" type="text" class="form-control ps-5" placeholder="Search Product..."> <span class="position-absolute top-50 product-show translate-middle-y"><i class="bx bx-search"></i></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <button id="btnSearch" class="btn btn-primary" type="button"><i class="bx bx-search"></i>Search</button>
                                    &nbsp;
                                    <button id="btnClearFilter" class="btn btn-primary" type="button">
                                        <i class="bx bx-rotate-right me-0"></i>&nbsp;Refresh
                                    </button>
                                </div>
                                <div style="display:none" class="col">
                                    <button id="btnExport" class="btn btn-primary" type="button"><i class="bx bxs-file"></i>Export</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="dataList" class="display responsive nowrap warhouse" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Order No</th>
                            <th>Shipment Date</th>
                            <th>Customer/Vendor Name</th>
                            <th>From Location</th>
                            <th>To Location</th>
                            <th>Document Type</th>
                            <th>Accepted By</th>
                            <th>Inco Term</th>
                            <th>From Address</th>
                            <th>To Address</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                    </tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th>Order No</th>
                            <th>Shipment Date</th>
                            <th>Customer/Vendor Name</th>
                            <th>From Location</th>
                            <th>To Location</th>
                            <th>Document Type</th>
                            <th>Accepted By</th>
                            <th>Inco Term</th>
                            <th>From Address</th>
                            <th>To Address</th>
                        </tr>
                    </tfoot>
                </table>
                <input id="hdnWSITaskCount" style="display:none" />
                <div id="orderInfo"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modalWarehouseVendor" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="dvVendor" style="display:none">
                    <div class="row g-3">
                        <div class="col-md-10">
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Vendor : </label>
                                <div class="col-sm-9">
                                    <select id="ddlVendor" class="form-select"></select>
                                    <input id="hfDocNo" value="" style="display:none" />
                                    <input id="hfLineNo" value="" style="display:none" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" align="right">
                <button id="btnSave" type="button" class="btn btn-primary" onclick="MapDropShipmentVendor();">Save</button>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/appjs/SPWarehouseList.js"></script>