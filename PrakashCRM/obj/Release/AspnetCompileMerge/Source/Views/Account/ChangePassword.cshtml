
@{
    ViewBag.Title = "ChangePassword1";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}

<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/SPDashboard/Index"><i class="bx bx-tachometer"></i>&nbsp;Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Change Password
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div>
                    <h6 class="mb-0 font-weight-bold">Change Password</h6>
                    <hr />
                    <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-2">
                        <div class="col d-flex">
                            <div class="card radius-10 p-0 w-100 bg-transparent shadow-none">
                                <div class="card radius-10">
                                    <div class="card-body" style="position: relative;">
                                        <div class="row g-3">
                                            <div class="col-md-12">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">Current Password<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                    <div class="col-sm-9">
                                                        <div class="input-group" id="show_hide_currpassword">
                                                            <input id="txtCurPass" type="password" class="form-control" placeholder="Current Password"> <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row g-3">
                                            <div class="col-md-12">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">New Password<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                    <div class="col-sm-9">
                                                        <div class="input-group" id="show_hide_newpassword">
                                                            <input id="txtNewPass" type="password" class="form-control" placeholder="New Password"> <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                                                        </div>
                                                        @*<span style="color:blue">(Password Policy Note - Password should have at least 1 Uppercase, 1 Lowercase, 1 special Char, and 1 Digit and Minimum 8 Character.)</span>*@
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row g-3">
                                            <div class="col-md-12">
                                                <div class="row mb-3">
                                                    <label class="col-sm-3 col-form-label">Confirm New Password<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                    <div class="col-sm-9">
                                                        <div class="input-group" id="show_hide_confpassword">
                                                            <input id="txtConfirmPass" type="password" class="form-control" placeholder="Confirm New Password"> <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="toolbar">
                                            <div class=" text-end g-3">
                                                <input id="getServiceApiUrl" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceApiUrl"].ToString()" style="display:none" />
                                                <input type="hidden" id="hfLoggedInUserEmail" value="@Session["loggedInUserEmail"]" />

                                                <button id="btnSavePass" class="btn btn-success" type="submit"><i class="bx bxs-save"></i> Save</button>
                                                &nbsp;
                                                <a href="/SPDashboard/Index" class="btn btn-danger"><i class="lni lni-close"></i> Cancel</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col d-flex">
                            <div class="card radius-10">
                                <div class="card-body" style="position: relative;">
                                    <h5 data-start="82" data-end="109">🔒 Password Policy Note</h5>
                                    <p data-start="111" data-end="162">Your password must meet the following requirements:</p>
                                    <ul data-start="164" data-end="387">
                                        <li data-start="164" data-end="207">
                                            <p data-start="166" data-end="207">✅ At least <strong data-start="177" data-end="199">1 uppercase letter</strong> (A–Z)</p>
                                        </li>
                                        <li data-start="208" data-end="251">
                                            <p data-start="210" data-end="251">✅ At least <strong data-start="221" data-end="243">1 lowercase letter</strong> (a–z)</p>
                                        </li>
                                        <li data-start="252" data-end="284">
                                            <p data-start="254" data-end="284">✅ At least <strong data-start="265" data-end="276">1 digit</strong> (0–9)</p>
                                        </li>
                                        <li data-start="285" data-end="348">
                                            <p data-start="287" data-end="348">✅ At least <strong data-start="298" data-end="321">1 special character</strong> from: !, @@, $, _</p>
                                        </li>
                                        <li data-start="349" data-end="387">
                                            <p data-start="351" data-end="387">✅ Minimum length of <strong data-start="371" data-end="387">8 characters</strong></p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class='loader' id='divImage' style="display:none">
    <!-- MODAL CONTENT -->
    <div class='loader-content'>
        <img alt="Loading... Please wait!" src="~/Layout/assets/images/login-images/load-image-2.gif" width="100" height="100" />
    </div>
</div>

<div class="modal" id="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Password Changed Successfully</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <center>
                    <img src="~/Layout/assets/images/appImages/Icon-1.png" />
                    <br />
                    Password changed successfully, Kindly login with your new password.
                </center>

            </div>
            <div class="modal-footer">
                <button id="btnClose" type="button" class="btn btn-primary">Close</button>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/appjs/ChangePassword.js"></script>
<script>

    $(document).ready(function () {

        $('#btnClose,.btn-close').click(function () {
            $("#modal").css("display", "none");
            $('#btnSavePass').prop('disabled', false);
            window.location.replace('@Url.Action("Login", "Account")');
        });

    });

</script>
