@model IEnumerable<PrakashCRM.Data.Models.SPWarehouseTransfer>
@{
    ViewBag.Title = "AcceptedTaskList";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}

<link href="~/Content/appcss/paginationFilterCss.css" rel="stylesheet" />
<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/SPDashboard/Index"><i class="bx bx-tachometer"></i>&nbsp;Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Warehouse
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Warehouse Transfer
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Accepted Task</li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="card-body">

            <div class="row">
                <div>
                    <div class="row g-3">
                        <div class="col-md-2">
                            <input id="getServiceApiUrl" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceApiUrl"].ToString()" style="display:none" />
                            <input id="getLoggedInUserNo" value="@Session["loggedInUserNo"].ToString()" style="display:none" />
                            <button id="btnMapTransporter" class="btn btn-primary  mb-3 mb-lg-0" type="button" onclick="MapTransporter();"><i class='bx bx-message-square-check'></i>&nbsp;Map Transporter</button>
                        </div>

                        <div class="col-md-10">
                            <div class="row row-cols-auto g-3" style="float:right">
                                <div class="col">
                                    <label class="col-form-label">Filter:</label>
                                </div>
                                <div class="col">
                                    <select id="ddlField" class="form-select">
                                        <option value="---Select---">---Select---</option>
                                        <option value="No">Transfer No</option>
                                        <option value="Transfer_from_Name">Transfer From</option>
                                        <option value="Transfer_to_Name">Transfer To</option>
                                        <option value="Shipment_Date">Shipment Date</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <input id="txtFromDate" type="date" class="form-control" style="display:none">
                                    <select id="ddlOperator" class="form-select">
                                        <option value="---Select---">---Select---</option>
                                        <option value="Equal">Equal</option>
                                        <option value="Not Equal">Not Equal</option>
                                        <option value="Starts With">Starts With</option>
                                        <option value="Ends With">Ends With</option>
                                        <option value="Less Than">Less Than</option>
                                        <option value="Greater Than">Greater Than</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <input id="txtToDate" type="date" class="form-control" style="display:none">
                                    <div id="dvtxtSearch" class="position-relative">
                                        <input id="txtSearch" type="text" class="form-control ps-5" placeholder="Search Product..."> <span class="position-absolute top-50 product-show translate-middle-y"><i class="bx bx-search"></i></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <button id="btnSearch" class="btn btn-primary" type="button"><i class="bx bx-search"></i>Search</button>
                                    &nbsp;
                                    <button id="btnClearFilter" class="btn btn-primary" type="button">
                                        <i class="bx bx-rotate-right me-0"></i>&nbsp;Refresh
                                    </button>
                                </div>
                                <div style="display:none" class="col">
                                    <button id="btnExport" class="btn btn-primary" type="button"><i class="bx bxs-file"></i>Export</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="dataList" class="display responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th><input type="checkbox" id="chkAll" class="form-check-input" /></th>
                            <th>Transfer No</th>
                            <th>Transfer From Code</th>
                            <th>Transfer From Name</th>
                            <th>Transfer To Code</th>
                            <th>Transfer To Name</th>
                            <th>Shipment Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                    </tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>Transfer No</th>
                            <th>Transfer From Code</th>
                            <th>Transfer From Name</th>
                            <th>Transfer To Code</th>
                            <th>Transfer To Name</th>
                            <th>Shipment Date</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
                <input id="hdnWTATaskCount" style="display:none" />
                <div id="orderInfo"></div>
            </div>
            <div>
                <div class="row">
                    <div>
                        <div class="row g-3">

                            <div class="col-md-12">
                                <div class="row row-cols-auto g-3">
                                    <div class="col">
                                        <label class="col-form-label" style="font-weight:bold">Per Page Records: </label>
                                    </div>
                                    <div class="col">
                                        <select id="ddlRecPerPage" class="form-select">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                        </select>
                                    </div>
                                    <div class="col">
                                        <ul class="pagination pagination-lg pager" id="myPager"></ul>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modalTransferLineList" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="dvTransferLines" style="display:none">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <div class="row mb-3">
                                <div class="col-sm-12">
                                    <table class="table mb-0 table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col">Item No</th>
                                                <th scope="col">Description</th>
                                                <th scope="col">Quantity</th>
                                                <th scope="col">UOM</th>
                                                <th scope="col">Packing Style</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbTransferLines">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modalTransporter" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="dvTransporter" style="display:none">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <div class="row mb-3">
                                <div class="col-sm-12">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <label class="col-sm-3 col-form-label">Transporter No<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                <div class="col-sm-9">
                                                    <input id="hfTransporterNo" type="text" style="display:none" />
                                                    <input id="txtTransporterNo" class="form-control" type="text" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <label class="col-sm-3 col-form-label">Apply Freight Charges</label>
                                                <div class="col-sm-9">
                                                    <input id="chkApplyFreightCharges" type="checkbox" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <label class="col-sm-3 col-form-label">Apply Loading Charges</label>
                                                <div class="col-sm-9">
                                                    <input id="chkApplyLoadingCharges" type="checkbox" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <label class="col-sm-3 col-form-label">Fraight Charges<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                <div class="col-sm-9">
                                                    <input id="txtFraightCharges" type="text" value="0" class="form-control" disabled />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <label class="col-sm-3 col-form-label">Apply Unloading Charges<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                <div class="col-sm-9">
                                                    <input id="chkApplyUnloadingCharges" type="checkbox" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <label class="col-sm-3 col-form-label">LR RR No</label>
                                                <div class="col-sm-9">
                                                    <input id="txtLRRRNo" type="text" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <label class="col-sm-3 col-form-label">Dirver Name</label>
                                                <div class="col-sm-9">
                                                    <input id="txtDirverName" class="form-control" />
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <label class="col-sm-3 col-form-label">LR RR Date<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                <div class="col-sm-9">
                                                    <input id="txtLRRRDate" type="text" class="form-control datepicker" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <label class="col-sm-3 col-form-label">Dirver MobileNo<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                <div class="col-sm-9">
                                                    <input id="txtDirverMobileNo" type="text" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <label class="col-sm-3 col-form-label">Dirver LicenseNo</label>
                                                <div class="col-sm-9">
                                                    <input id="txtDirverLicenseNo" type="text" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <label class="col-sm-3 col-form-label">Vehicle No<span class="required" style="color:red;margin-left:2px">*</span></label>
                                                <div class="col-sm-9">
                                                    <input id="txtVehicleNo" type="text" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row mb-3">
                                                <label class="col-sm-3 col-form-label">Remarks</label>
                                                <div class="col-sm-9">
                                                    <input id="txtRemarks" type="text" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row g-3">
                                        <div class="col-md-12">
                                            <div class="row mb-3">
                                                <div class="col-sm-8"></div>
                                                <div class="col-sm-4" align="right">
                                                    <button id="btnSaveTransport" type="button" class="btn btn-primary" onclick="CloseTask();"><i class="bx bxs-save"></i> Save </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/appjs/TransferAcceptedTaskList.js"></script>