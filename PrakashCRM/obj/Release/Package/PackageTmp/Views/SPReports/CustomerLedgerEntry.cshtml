@model PrakashCRM.Data.Models.SPCustomerReport
@{
    ViewBag.Title = "CustomerLedgerEntry";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}

<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/SPDashboard/Index"><i class="bx bx-tachometer"></i>&nbsp;Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#"> Reports </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Customer Ledger Entry
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <div id="customerFilterContainer" class="customer-filter-container">
                    <div class="row g-3">
                        <div class="col-md-2">
                            <div class="" id="spinnerId" style="width: 200px;">
                                <span class="input-group-text" id="loader" style="display: none;">
                                    <span class="spinner-border spinner-border-sm text-primary"></span>
                                </span>
                                <input type="text" id="txtCustomerName" class="form-control" placeholder="Type Customer Name" value="@Model.Name" />
                                </div>
                                <input type="hidden" id="hdntxtCustomerNo" name="hdntxtCustomerNo_1" value="@Model.No" />
                            </div>
                            <div class="col-md-2">
                                <input type="date" id="txtCustFDate" class="form-control" placeholder="From Date">
                            </div>
                            <div class="col-md-2">
                                <input type="date" id="txtCustTDate" class="form-control" placeholder="To Date">
                            </div>
                            <div class="col-md-1">
                                <button type="button" id="btnGenerate" class="btn btn-primary">Generate</button>
                            </div>
                            <div class="col-md-5">
                                <input id="getServiceApiUrl" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceApiUrl"]" style="display:none" />
                            </div>
                        </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-12">
                        <!-- Embedded PDF Viewer -->
                        <iframe id="pdfFrame" allowfullscreen  style="width:100%; height:600px; border:1px solid #ccc;"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/reportjs/CustomerLedgerEntry.js"></script>
