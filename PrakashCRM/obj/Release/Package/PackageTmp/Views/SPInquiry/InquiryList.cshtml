
@{
    ViewBag.Title = "InquiryList";
    Layout = "~/Views/Shared/_SalespersonMasterLayout.cshtml";
}

<style>
    .ViewInqProdCls, .ConvertToQuoteCls,
    .EditCls:hover {
        cursor: pointer;
    }
</style>
<link href="~/Content/appcss/paginationFilterCss.css" rel="stylesheet" />
<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/SPDashboard/Index"><i class="bx bx-tachometer"></i>&nbsp;Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Inquiry List</li>
                </ol>
            </nav>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="card-body">

            <div class="row">
                <div>
                    <div class="row g-3">
                        <div class="col-md-1">
                            <input id="getServiceApiUrl" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceApiUrl"].ToString()" style="display:none" />
                            <button id="btnCreateIQ" class="btn btn-primary  mb-3 mb-lg-0" type="button"><i class='bx bxs-plus-square'></i>&nbsp;New</button>
                        </div>

                        <div class="col-md-11">
                            <div class="row row-cols-auto g-3" style="float:right">
                                <div class="col">
                                    <select id="ddlStatus" class="form-select">
                                        <option value="-1">All</option>
                                        <option value="Pending" selected>Pending</option>
                                        <option value="Partial">Partial</option>
                                        <option value="Completed">Completed</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <label class="col-form-label">Filter:</label>
                                </div>
                                <div class="col">
                                    <select id="ddlField" class="form-select">
                                        <option value="-1">---Select---</option>
                                        <option value="Inquiry_No">Inquiry No</option>
                                        <option value="Inquiry_Date">Inquiry Date</option>
                                        @*<option value="Delivery_Date">Delivery Date</option>*@
                                        <option value="Contact_Company_Name">Customer Name</option>
                                        <option value="Payment_Terms">Payment Terms</option>
                                        <option value="Salesperson_Code">Salesperson</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <input id="txtFromDate" type="date" class="form-control" style="display:none">
                                    <select id="ddlOperator" class="form-select">
                                        <option value="-1">---Select---</option>
                                        <option value="Equal">Equal</option>
                                        <option value="Not Equal">Not Equal</option>
                                        <option value="Starts With">Starts With</option>
                                        <option value="Ends With">Ends With</option>
                                        <option value="Contains" selected>Contains</option>
                                        <option value="Less Than">Less Than</option>
                                        <option value="Greater Than">Greater Than</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <input id="txtToDate" type="date" class="form-control" style="display:none">
                                    <div id="dvtxtSearch" class="position-relative">
                                        <input id="txtSearch" type="text" class="form-control ps-5" placeholder="Search Product..."> <span class="position-absolute top-50 product-show translate-middle-y"><i class="bx bx-search"></i></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <button id="btnSearch" class="btn btn-primary" type="button"><i class="bx bx-search"></i></button>
                                    &nbsp;
                                    <button id="btnClearFilter" class="btn btn-primary" type="button">
                                        <i class="bx bx-rotate-right me-0"></i>&nbsp;
                                    </button>
                                </div>
                                <div class="col">
                                    <button id="btnSendNotification" class="btn btn-primary" type="button"><i class="bx bx-mail-send"></i>Send Notification</button>
                                </div>
                                <div class="col">
                                    <button id="btnAssign" class="btn btn-primary" type="button">Assign</button>
                                </div>
                                <div style="display:none" class="col">
                                    <button id="btnExport" class="btn btn-primary" type="button"><i class="bx bxs-file"></i>Export</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="dataList" class="display responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th><input type="checkbox" id="chkAll" class="form-check-input" /></th>
                            <th></th>
                            <th>Convert<br />To SQ</th>
                            <th></th>
                            <th>Inquiry No</th>
                            <th>Inquiry Date</th>
                            <th>Customer</th>
                            @*<th>Delivery Date</th>*@
                            <th>Payment Terms</th>
                            <th>Status</th>
                            <th>Salesperson</th>
                            <th>Consignee Address</th>
                            <th>Remarks</th>
                            <th>BillTo Name</th>
                            <th>BillTo Address</th>
                            <th>DeliveryTo Name</th>
                            <th>DeliveryTo Address</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                    </tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th>Convert<br />To SQ</th>
                            <th></th>
                            <th>Inquiry No</th>
                            <th>Inquiry Date</th>
                            <th>Customer</th>
                            @*<th>Delivery Date</th>*@
                            <th>Payment Terms</th>
                            <th>Status</th>
                            <th>Salesperson</th>
                            <th>Consignee Address</th>
                            <th>Remarks</th>
                            <th>BillTo Name</th>
                            <th>BillTo Address</th>
                            <th>DeliveryTo Name</th>
                            <th>DeliveryTo Address</th>
                        </tr>
                    </tfoot>
                </table>
                <input id="hdnLoggedInUserSPCode" value="@Session["loggedInUserSPCode"]" style="display:none" />
                <input id="hdnSPCodesOfReportingPersonUser" value="@Session["SPCodesOfReportingPersonUser"]" style="display:none" />
                <input id="hdnSPIQCount" style="display:none" />
                <div id="orderInfo"></div>
            </div>
            <div>
                <div class="row">
                    <div>
                        <div class="row g-3">

                            <div class="col-md-12">
                                <div class="row row-cols-auto g-3">
                                    <div class="col">
                                        <label class="col-form-label" style="font-weight:bold">Per Page Records: </label>
                                    </div>
                                    <div class="col">
                                        <select id="ddlRecPerPage" class="form-select">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                        </select>
                                    </div>
                                    <div class="col">
                                        <ul class="pagination pagination-lg pager" id="myPager"></ul>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modalInquiryList" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="dvInquiryProducts" style="display:none">

                    <div class="row g-3">
                        <div class="col-md-12">
                            <table>
                                <tr>
                                    <td><label style="font-weight:bold">Inquiry No: </label></td>
                                    <td>&nbsp;</td>
                                    <td><label id="lblInqProdInqNo"></label></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br />
                    <div class="row g-3">
                        <div class="col-md-12">
                            <div class="row mb-3">
                                <div class="col-sm-12">
                                    <table class="table mb-0 table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col">Product No</th>
                                                <th scope="col">Product Name</th>
                                                <th scope="col">Quantity</th>
                                                <th scope="col">Packing Style</th>
                                                <th scope="col">UOM</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbInqProduct">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="dvSendNotification" style="display:none">
                    <div class="row g-3">
                        <div class="col-md-10">
                            <div class="row mb-3">
                                <input id="hdnSPEmail" value="@Session["loggedInUserEmail"]" style="display:none" />
                                <input id="hdnSPName" value="@Session["loggedInUserFName"] @Session["loggedInUserLName"]" style="display:none" />
                                <label class="col-sm-3 col-form-label">User:</label>
                                <div class="col-sm-9">
                                    <select id="ddlUserSendNotif" class="form-select"></select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-10">
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Message:</label>
                                <div class="col-sm-9">
                                    <textarea id="txtNotifMsg" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" align="right">
                <button id="btnSendNotificationSpinner" class="btn btn-primary" type="button" disabled style="display:none">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span class="visually-hidden">Loading...</span>
                </button>
                <button id="btnConfirmSend" type="button" class="btn btn-primary">Send</button>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalSent" tabindex="-1" aria-hidden="true" style="display:none">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><label id="lblSentTitle"></label></h5>
                <button id="btnCloseSent" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <center>
                    <img src="~/Layout/assets/images/appImages/Icon-1.png" />
                    <br />
                    <label id="lblSentMsg"></label>
                </center>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalAssign" tabindex="-1" aria-hidden="true" style="display:none">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Assign To Other Salesperson</h5>
                <button id="btnCloseAssign" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-md-12">
                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Salesperson:&nbsp;</label>
                            <div class="col-sm-9">
                                <select id="ddlSalesperson" class="form-select">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
                <div class="row g-3">
                    <div class="col-md-12">
                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Message:&nbsp;</label>
                            <div class="col-sm-9">
                                <textarea id="txtAssignToMsg" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
            </div>
            <div class="modal-footer" align="right">
                <label id="lblAssignSPMsg" style="color:red;display:none">Please Select Salesperson</label>
                <button id="btnAssignSpinner" class="btn btn-primary" type="button" disabled style="display:none">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span class="visually-hidden">Loading...</span>
                </button>
                <button id="btnConfirmAssign" type="button" class="btn btn-primary">Assign</button>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/appjs/InquiryList.js"></script>
<script>
    $(document).ready(function () {

        $('#btnCreateIQ').click(function () {
            window.location.replace('@Url.Action("Inquiry", "SPInquiry")');
        });

    });

    function EditInquiry(InqNo) {

        window.location.replace('@Url.Action("Inquiry", "SPInquiry")?InquiryNo=' + InqNo);

    }
</script>